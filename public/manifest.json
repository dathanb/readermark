{
  "manifest_version": 2,
  "name": "ReadMarks",
  "short_name": "ReadMarks",
  "description": "Allows saving a single, per-domain bookmark",
  "version": "1.0",
  "icons": {
    "128": "bookmark-128.png"
  },
  "browser_action": {
      "default_icon": "bookmark-128.png",
      "default_popup": "index.html",
      "default_title": "ReaderMarks menu"
  },
  "permissions": [
      "activeTab",
      "tabs",
      "bookmarks",
      "https://ajax.googleapis.com/"
  ],
  "content_security_policy": "script-src 'self' https://cdn.firebase.com https://*.firebaseio.com; object-src 'self'"
}
