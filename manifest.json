{
    "manifest_version": 2,

    "name": "ReadMarks",
    "description": "Allows saving a single, per-domain bookmark",
    "version": "1.0",
    "icons": {
        "128": "bookmark-128.png"
    },

    "browser_action": {
        "default_icon": "bookmark-128.png",
        "default_popup": "main.html",
        "default_title": "ReaderMarks menu"
    },
    "background": { 
        "scripts": [ 
            "js/framework/jquery-2.1.4.js",
            "js/framework/angular-1.4.5.min.js"
        ]
    },
    "permissions": [
        "activeTab",
        "tabs",
        "bookmarks",
        "https://ajax.googleapis.com/"
    ]
}
